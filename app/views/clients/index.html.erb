<h1 class="page-header">Clients</h1>

<div class="panel panel-default">
  <div class="panel-heading">
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Number</th>
        <th>Company</th>
        <th>Name</th>
        <th>Email</th>
        <th>Website</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |c| %>
        <tr>
          <td>
            <%= "%.6d" % c.client_number %>
          </td>
          <td>
            <%= c.company_name %>
          </td>
          <td>
            <%= c.name %>
          </td>
          <td>
            <%= c.email %>
          </td>
          <td>
            <%= c.url %>
          </td>
          <td>
            <%= link_to (content_tag :span, (), class: 'fa fa-eye fa-fw'), client_path(c), class: 'btn btn-primary', title: 'Show'  %>
            <%= link_to (content_tag :span, (), class: 'fa fa-pencil fa-fw'), edit_client_path(c), class: 'btn btn-info', title: 'Edit'  %>
            <%= link_to (content_tag :span, (), class: 'fa fa-remove fa-fw'), client_path(c), class: 'btn btn-danger', title: 'Delete', method: :delete, data: { :confirm => "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="panel-footer">
    <%= link_to (content_tag :span, (), class: 'fa fa-plus fa-fw') + " New Client", new_client_path, class: 'btn btn-success' %>
  </div>
</div>
