<h1 class="page-header">My Invoices</h1>

<div class="panel panel-default">
  <div class="panel-heading">
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Number</th>
        <th>Client</th>
        <th>Date</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @invoices.each do |i| %>
        <tr>
          <td>
            <%= i.number %>
          </td>
          <td>
            <%= i.client.name %>
          </td>
          <td>
            <%= i.date %>
          </td>
          <td>
            <%= link_to (content_tag :span, (), class: 'fa fa-eye fa-fw'), invoice_path(i), class: 'btn btn-primary', title: 'Show'  %>
            <%= link_to (content_tag :span, (), class: 'fa fa-pencil fa-fw'), edit_invoice_path(i), class: 'btn btn-info', title: 'Edit'  %>
            <%= link_to (content_tag :span, (), class: 'fa fa-remove fa-fw'), invoice_path(i), class: 'btn btn-danger', title: 'Delete', method: :delete, data: { :confirm => "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="panel-footer">
    <%= link_to (content_tag :span, (), class: 'fa fa-plus fa-fw') + " New Invoice", new_invoice_path, class: 'btn btn-success' %>
  </div>
</div>
