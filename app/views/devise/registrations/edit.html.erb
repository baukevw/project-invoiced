<h1 class="page-header">Edit <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
            html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <h3>Login settings</h3>

  <div class="well">
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off",
                                                   class: "form-control" %>
    </div>
  </div>

  <h3>Account settings</h3>
  <div class="well">
    <div class="form-group">
      <%= f.label :company_name %><br />
      <%= f.text_field :company_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :street %> & <%= f.label :number %><br />
      <%= f.text_field :street %>
      <%= f.text_field :number %>
    </div>

    <div class="form-group">
      <%= f.label :zipcode %><br />
      <%= f.text_field :zipcode, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :city %><br />
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :url, 'Website' %><br />
      <%= f.text_field :url, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :bank_number %><br />
      <%= f.text_field :bank_number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :bank_name %><br />
      <%= f.text_field :bank_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :fat_code %><br />
      <%= f.text_field :fat_code, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :chambers, 'Chambers of Commerce' %><br />
      <%= f.text_field :chambers, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :payment_instructions %><br />
      <%= f.text_area :payment_instructions, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :company_logo %><br />
      <%= image_tag resource.company_logo.web, class: ' img-responsive' %><br><br>
      <%= f.file_field :company_logo %>
    </div>

  </div>

  <div class="form-group">
    <%= f.submit "Update", class: 'btn btn-success' %>
    <%= link_to "Back", :back, class: 'btn btn-default' %>
  </div>
<% end %>
